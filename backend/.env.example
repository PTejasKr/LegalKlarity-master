# Backend Environment Variables - Example
# Copy this file to .env and fill in your actual values

PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# For Railway deployment, this should be set to the actual URL of your content analyzer service
# Format: https://<your-content-analyzer-service-name>.up.railway.app
# Example: https://legalklarity-content-analyzer.up.railway.app
CONTENT_ANALYZER_URL=https://your-content-analyzer-service-name.up.railway.app

GEMINI_API_KEY=your-gemini-api-key-here  # Optional - leave empty for mock mode
QWEN_API_KEY=your-qwen-api-key-here  # Optional - leave empty for mock mode
KANOON_API_KEY=your-kanoon-api-key-here  # Optional - leave empty for mock mode

# Use mock API when set to true (useful for testing when real API quota is exceeded)
USE_MOCK_API=true